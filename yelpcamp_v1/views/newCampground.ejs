<%- include ('partials/header') %>

<div class="container">
  <h1 style="text-align: center;">Submit a new campground</h1>
  <div class="row">
    <div style="margin: auto; width: 30%; margin: 30px auto; ">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Enter name of campground" required />
        </div>
        <div class="form-group">
          <input class="form-control" type="url" name="image" placeholder="https://someURL.com" required />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Go back</a>
    </div>
  </div>
</div>

